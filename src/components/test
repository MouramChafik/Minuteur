useEffect(() => {
  // Charger les états sauvegardés au démarrage
  const savedState = localStorage.getItem('focusModeState');
  if (savedState) {
    const state = JSON.parse(savedState);
    setIsActive(state.isActive || false);
    setAmbientSound(state.ambientSound || 'none');
    setVolume(state.volume || 50);
    setIsPlaying(state.isPlaying || false);
  }
}, []);

// Sauvegarder les états quand ils changent
useEffect(() => {
  const stateToSave = {
    isActive,
    ambientSound,
    volume,
    isPlaying
  };
  localStorage.setItem('focusModeState', JSON.stringify(stateToSave));
}, [isActive, ambientSound, volume, isPlaying]);